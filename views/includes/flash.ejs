<% if(success_msg.length && success_msg) { %>
<div
  class="alert alert-success alert-dismissible fade show col-6 offset-3 mt-3"
  role="alert"
>
  <%= success_msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %> <% if(delete_msg.length && delete_msg) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-6 offset-3 mt-3"
  role="alert"
>
  <%= delete_msg %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
